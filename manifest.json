{
  "manifest_version": 3,
  "name": "Pickr",
  "version": "1.0.0",
  "description": "Color picker",
  "icons": {},
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/js/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/js/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "picker": {
      "suggested_key": {
        "default": "Ctrl+Shift+~"
      }
    }
  },
  "author": "Pickr",
  "permissions": [
    "tabs",
    "storage"
  ]
}