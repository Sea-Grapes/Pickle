{
  "manifest_version": 3,
  "name": "Pickle",
  "version": "1.0.0",
  "description": "Color picker",
  "icons": {
    "16": "src/img/16.png",
    "32": "src/img/32.png",
    "48": "src/img/64.png",
    "128": "src/img/128.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Pickle - A color picker"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/js/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/js/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "author": "Pickle",
  "permissions": [
    "tabs",
    "storage"
  ]
}